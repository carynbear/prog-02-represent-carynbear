<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ngan.prog2b.MainActivity"
    android:background="@mipmap/presidents"
    tools:deviceIds="wear_round">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        />

        <ImageView
            android:id="@+id/vote_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="13dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <android.support.wearable.view.BoxInsetLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vote_icon"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="23dp"
            android:paddingTop="0dp"
            >
                <LinearLayout
                    app:layout_box="all"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="United States Legislators"
                        android:textAlignment="center"
                        android:textColor="#0099cc"
                        android:textSize="13sp" />

                    <android.support.wearable.view.ActionLabel
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text ="MURICA"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:maxLines="1"
                        android:layout_marginBottom="5dp"
                        />

                    <android.support.wearable.view.ActionLabel
                        android:id="@+id/vote_county_state"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text ="please launch on phone\nor shake watch"
                        android:textAlignment="center"
                        android:textColor="#ff6666"
                        android:maxLines="2" />
                </LinearLayout>

        </android.support.wearable.view.BoxInsetLayout>
    </RelativeLayout>
